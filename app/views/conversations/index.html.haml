- @conversations.each do |conversation|
  - if conversation.participants != @user
    %ul
      %li
        -#= conversation.participants
        = link_to conversation.subject, conversation
        = conversation.updated_at.strftime("%a, %m/%e/%Y %I:%M %p")
        = button_to "Trash It!", {:controller => "conversations", :action => "untrash", :id => conversation.id},  :title => "Move to Inbox", :method=>'post'
        %hr