= form_for(@quest) do |f|
  -if @quest.errors.any?
    = render 'errors'

  .field
    = f.label :name
    = f.text_field :name
    = f.label :description
    = f.text_field :description
    = f.hidden_field :parent_id
    = f.hidden_field :campaign_id
  .actions
    = f.submit :class => "btn btn-primary"
