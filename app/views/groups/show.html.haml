%h2.text-centered
  = @group.name

%h4 Members
%table{:class => "table table-hover"}
  %thead
    %tr
      %th Name
      %th Email
  %tbody
    - @group.users.each do |user|
      %tr
        %td= user.username
        %td= user.email

%h4 Admins
%table{:class => "table table-hover"}
  %thead
    %tr
      %th Name
      %th Email
  %tbody
    - @group.admins.each do |user|
      %tr
        %td= user.username
        %td= user.email

%h4 Projects
%table{:class => "table table-hover"}
  %thead
    %tr
      %th Name
      %th Description
  %tbody
    - @group.campaigns.each do |campaign|
      %tr
        %td
          = link_to campaign.name, campaign_path(campaign)
        %td= campaign.description