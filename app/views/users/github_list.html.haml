%h2 Projects

%table{:class => "table table-hover"}
  %thead
    %tr
      %th Project Name
      %th Project Owner
      %th Import

  %tbody
    - @projects.each do |t|
      %tr
        %td
          =link_to(t.project_name, t.url )
        %td
          =t.github_user

        - if t.imported
          %td
            = link_to "Delete" , users_github_project_del_path(:github_user=>t.github_user, :repo_name=>t.project_name ), :class => "ui-button"


        - else
          %td
            = link_to "Import", users_github_project_import_path(:github_user=>t.github_user, :repo_name=>t.project_name ), :class => "ui-button"
